
<h2> Category List </h2>
<div class="pull-right" style="padding-bottom: 20px;">
  <%= link_to("New Category", new_admin_category_path, class: "btn btn-primary") %>
</div>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>分类名称</th>
      <th>生成时间</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
    <tr>
      <td> <%= category.name %> </td>
      <td> <%= category.created_at.to_s(:long) %> </td>
      <td>
        <%= link_to("Edit", edit_admin_category_path(category)) %>
        <%= link_to("Delete", admin_category_path(category),:method => :delete,:data=>{:confirm=>"Are you sure?"}) %>
      </td>

    </tr>
    <% end %>

</table>
